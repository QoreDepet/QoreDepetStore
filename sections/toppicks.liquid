<div class="top-picks">
  <div class="product-grid">
    {% for product in collections['top-picks'].products %}
      <a href="{{ product.url }}">
        <div class="product">
          <img
            class="product-image"
            src="{{ product.featured_image | image_url }}"
            alt="{{ product.title }}"
          >
          <div class="product-info">
            <p class="product-title">{{ product_names_list[forloop.index0] }}</p>
            <p class="product-price">{{ product.price | money_with_currency }}</p>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

<style>
  .top-picks {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: {{ section.settings.top_picks_margin_bottom }}px;
  }
  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ section.settings.top_picks_grid_gap }}px;
    justify-items: center;
  }
  .product {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 8px;
    word-wrap: break-word;
    max-width: 310px;
    border-radius: 7px;
    box-shadow: 0px 8px #0000000a;
    margin-bottom: 20px;
  }
  .product-image {
    width: {{ image_width }}px;
    height: {{ image_height }}px;
    transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
  }
  .product-info {
    text-align: center;
    padding: 10px 0;
  }
  .product-title {
    font-size: {{ section.settings.font_size }}px;
    color: black;
  }
  .product-price {
    font-weight: bold;
  }
</style>
