{% schema %}
{
  "name": "Top Picks",
  "tag": "section",
  "class": "section",
  "settings": [],
  "presets": [
    {
      "name": "Top Picks"
    }
  ]
}
{% endschema %}

<div class="top-picks">
  <div class="product-grid">
    {% for product in collections['top-picks'].products %}
      <div class="product-item" data-hover-img="{{ product.images[1] | img_url: 'master' }}">
        <div class="product-banner">
          <img class="banner-img" src="{{ product.images[0] | img_url: 'master' }}" alt="{{ product.title }}">
        </div>
        <h2>{{ product.title | truncate: 20 }}</h2>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .top-picks {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    justify-items: center;
  }
  .product-item {
    width: 220px;
    height: 280px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    border-radius: 8px;
    text-align: center;
  }
  .product-banner {
    width: 100%;
    height: 180px;
    background: green;
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .banner-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease-in-out;
  }
  .product-item:hover .banner-img {
    opacity: 0;
  }
  .product-item:hover .product-banner {
    background-image: var(--hover-img);
    background-size: cover;
    background-position: center;
  }
</style>

<script>
  document.querySelectorAll('.product-item').forEach(item => {
    const hoverImg = item.getAttribute('data-hover-img');
    if (hoverImg) {
      item.style.setProperty('--hover-img', `url(${hoverImg})`);
    }
  });
</script>
