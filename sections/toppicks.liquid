{% schema %}
{
  "name": "Top Picks",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 10
    },
    {
      "type": "range",
      "id": "margin",
      "label": "Margin",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 10
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Image Width",
      "min": 100,
      "max": 300,
      "step": 10,
      "default": 220
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Image Height",
      "min": 100,
      "max": 300,
      "step": 10,
      "default": 180
    },
    {
      "type": "text",
      "id": "image_selection_first",
      "label": "Image Array Index for First Banner",
      "default": "0"
    },
    {
      "type": "text",
      "id": "image_selection_hover",
      "label": "Image Array Index for Hover",
      "default": "1"
    },
    {
      "type": "range",
      "id": "image_padding_top",
      "label": "Image Padding Top",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "image_padding_bottom",
      "label": "Image Padding Bottom",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "image_padding_left",
      "label": "Image Padding Left",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "image_padding_right",
      "label": "Image Padding Right",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "text_padding_top",
      "label": "Text Padding Top",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "text_padding_bottom",
      "label": "Text Padding Bottom",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 5
    }
  ],
  "presets": [
    {
      "name": "Top Picks"
    }
  ]
}
{% endschema %}

<div class="top-picks" style="padding: {{ section.settings.padding }}px; margin: {{ section.settings.margin }}px;">
  <div class="product-grid">
    {% for product in collections['top-picks'].products %}
      <div
        class="product-item"
        data-hover-img="{{ product.images[section.settings.image_selection_hover] | img_url: 'master' }}"
      >
        <div
          class="product-banner"
          style="width: {{ section.settings.image_width }}px; height: {{ section.settings.image_height }}px; padding: {{ section.settings.image_padding_top }}px {{ section.settings.image_padding_right }}px {{ section.settings.image_padding_bottom }}px {{ section.settings.image_padding_left }}px;"
        >
          <img
            class="banner-img"
            src="{{ product.images[section.settings.image_selection_first] | img_url: 'master' }}"
            alt="{{ product.title }}"
            height="500px"
            width="100px"
          >
        </div>
        <h2 style="font-size: {{ section.settings.font_size }}px; padding: {{ section.settings.text_padding_top }}px 0 {{ section.settings.text_padding_bottom }}px;">
          {{ product.title | truncate: 20 }}
        </h2>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .top-picks {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    justify-items: center;
  }
  .product-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    border-radius: 8px;
    text-align: center;
  }
  .product-banner {
    background: green;
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .banner-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease-in-out;
  }
  .product-item:hover .banner-img {
    opacity: 0;
  }
  .product-item:hover .product-banner {
    background-image: var(--hover-img);
    background-size: cover;
    background-position: center;
  }
</style>

<script>
  document.querySelectorAll('.product-item').forEach(item => {
    const hoverImg = item.getAttribute('data-hover-img');
    if (hoverImg) {
      item.style.setProperty('--hover-img', `url(${hoverImg})`);
    }
  });
</script>
