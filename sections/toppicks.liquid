{% schema %}
{
  "name": "Top Picks",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Image Width",
      "min": 100,
      "max": 300,
      "step": 10,
      "default": 220
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Image Height",
      "min": 100,
      "max": 300,
      "step": 10,
      "default": 180
    },
    {
      "type": "number",
      "id": "image_selection_first",
      "label": "Image Array Index for First Banner",
      "default": 0
    },
    {
      "type": "number",
      "id": "image_selection_hover",
      "label": "Image Array Index for Hover",
      "default": 1
    }
  ],
  "presets": [
    {
      "name": "Top Picks"
    }
  ]
}
{% endschema %}

<div class="top-picks">
  <div class="product-grid">
    {% for product in collections['top-picks'].products %}
      <h1>{{ product.title }}</h1>
    {% endfor %}
  </div>
</div>

<style>
  .top-picks {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    justify-items: center;
  }
</style>

<script>
  document.querySelectorAll('.product-item').forEach(item => {
    const hoverImg = item.getAttribute('data-hover-img');
    if (hoverImg) {
      item.style.setProperty('--hover-img', `url(${hoverImg})`);
    }
  });
</script>
