{% schema %}
{
  "name": "Top Picks",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Image Width",
      "min": 100,
      "max": 300,
      "step": 10,
      "default": 220
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Image Height",
      "min": 100,
      "max": 300,
      "step": 10,
      "default": 180
    },
    {
      "type": "number",
      "id": "image_selection_first",
      "label": "Image Array Index for First Banner",
      "default": 0
    },
    {
      "type": "number",
      "id": "image_selection_hover",
      "label": "Image Array Index for Hover",
      "default": 1
    }
  ],
  "presets": [
    {
      "name": "Top Picks"
    }
  ]
}
{% endschema %}

<div class="top-picks">
  <div class="product-grid">
    {% for product in collections['top-picks'].products %}
      {% assign first_index = section.settings.image_selection_first | plus: 0 %}
      {% assign hover_index = section.settings.image_selection_hover | plus: 0 %}
      {% if product.images.size > first_index and product.images.size > hover_index %}
        <div class="product-item" data-hover-img="{{ product.images[hover_index] | img_url: 'master' }}">
          <div
            class="product-banner"
            style="width: {{ section.settings.image_width }}px; height: {{ section.settings.image_height }}px;"
          >
            <img
              class="banner-img"
              src="{{ product.images[first_index] | img_url: 'master' }}"
              alt="{{ product.title }}"
            >
          </div>
          <h2 style="font-size: {{ section.settings.font_size }}px;">{{ product.title | truncate: 20 }}</h2>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  .top-picks {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    justify-items: center;
  }
  .product-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    border-radius: 8px;
    text-align: center;
  }
  .product-banner {
    background: green;
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .banner-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease-in-out;
  }
  .product-item:hover .banner-img {
    opacity: 0;
  }
  .product-item:hover .product-banner {
    background-image: var(--hover-img);
    background-size: cover;
    background-position: center;
  }
</style>

<script>
  document.querySelectorAll('.product-item').forEach(item => {
    const hoverImg = item.getAttribute('data-hover-img');
    if (hoverImg) {
      item.style.setProperty('--hover-img', `url(${hoverImg})`);
    }
  });
</script>
