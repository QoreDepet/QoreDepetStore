{% schema %}
{
  "name": "Top Picks",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 12,
      "max": 24,
      "unit": "px",
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Image Width",
      "min": 100,
      "max": 300,
      "step": 10,
      "default": 220
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Image Height",
      "min": 100,
      "max": 300,
      "step": 10,
      "default": 180
    },
    {
      "type": "number",
      "id": "image_selection_first",
      "label": "Image Array Index for First Banner",
      "default": 0
    },
    {
      "type": "number",
      "id": "image_selection_hover",
      "label": "Image Array Index for Hover",
      "default": 1
    },
    {
      "type": "text",
      "id": "product_name_list",
      "label": "Enter Product Names (comma-separated)",
      "default": "Item 1,Item 2,Item 3"
    }
  ],
  "presets": [
    {
      "name": "Top Picks"
    }
  ]
}
{% endschema %}

{% assign product_names_list = section.settings.product_name_list | split: ',' %}

<div class="top-picks">
  <div class="product-grid">
    {% for product in collections['top-picks'].products %}
      <p class="product-title">{{ product_names_list[forloop.index0] }}</p>
    {% endfor %}
  </div>
</div>

<style>
  .top-picks {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    justify-items: center;
  }

  .product-title {
    font-size : {{section.settings.font_sizes}}"px"
  }
</style>

