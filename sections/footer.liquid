<footer class="footer">
  <div class="footer-container">
    <div class="footer-section brand">
      <h2>QORE</h2>
      <h2>DEPET</h2>
      <p class="copyright">Â© 2025 QoreDepet</p>
    </div>

    <div class="footer-section policies">
      <ul class="footer-links">
        <li><a href="/privacy-policy">Privacy Policy</a></li>
        <li><a href="/terms-of-service">Terms of Service</a></li>
        <li><a href="/return-policy">Return Policy</a></li>
        <li><a href="/shipping-policy">Shipping Policy</a></li>
      </ul>
    </div>

    <div class="footer-section newsletter">
      <h3>Subscribe to Newsletters</h3>
      <form>
        <input class="input" type="email" placeholder="Enter your email..." required>
        <button type="submit">SUBSCRIBE</button>
      </form>
      <div class="icons-parent">
        {% for block in section.blocks %}
          <a href="{{ block.settings.icon_link}}">
            <img class="icon" src="{{ block.settings.icon_image | image_url }}" alt="Icon" height="100px" width="100px">
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</footer>
<style>
  .footer {
    background: black;
    color: white;
    padding: 20px 50px;
    display: flex;
    justify-content: center;
  }
  .footer-container {
    display: flex;
    justify-content: space-between;
    width: 100%;
    max-width: 1200px;
  }
  .footer-section {
    flex: 1;
    text-align: center;
  }
  .brand h2 {
    font-size: 50px;
    font-weight: bold;
    background: linear-gradient(#FFFFFF, #999999);
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .brand h2:nth-child(2)
  {
    margin-left: 100px;
    margin-bottom: 19px;
  }

  .copyright {
    color: gold;
    font-size: 12px;
  }
  .policies ul {
    list-style: none;
    padding: 0;
  }
  .policies ul li {
    margin: 8px 0;
  }
  .policies ul li a {
    color: white;
    text-decoration: none;
    font-weight: bold;
  }
  .newsletter h3 {
    font-size: 24px;
    color: white;
    font-weight: bold;
    margin-bottom: 10px;
    margin-top: 6px;
  }
  .newsletter form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .newsletter input {
    padding: 6px;
    width: 66%;
    border-radius: 5px;
    border: none;
    margin-bottom: 10px;
  }
  .newsletter button {
    background: linear-gradient(#CDA60B, #675306);
    border: none;
    padding: 8px 25px;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
  }
  .social-icons a {
    color: gold;
    font-size: 18px;
    margin: 0 5px;
    text-decoration: none;
  }
  .footer-links {
    text-align: center; /* Centers the text */
    display: flex;
    flex-direction: column;
    align-items: center; /* Ensures it's centered */
    justify-content: center;
  }

  .input {
    background: #D9D9D9;
    color: black;
  }

  .icons-parent {
    display: flex;
    margin-top: 10px;
    justify-content: center;
    margin-left: 15px;
  }

  .icon {
    margin-right: 10px;
    width: 18px;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "section",
  "settings": [
  ],
  "blocks": [
       {
            "name": "icons",
            "type": "image",
            "settings": [
                {
                    "type": "image_picker",
                    "label": "image",
                    "id": "icon_image"
                },
                {
                  "type": "text",
                  "id": "icon_link",
                  "label": "Icon Link",
                }
            ]
        }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}
