<footer class="footer">
  <div class="footer-container">
    <div class="footer-section brand">
      <h2>QORE</h2>
      <h2>DEPET</h2>
      <p class="copyright">Â© 2025 QoreDepet</p>
    </div>

    <div class="footer-section policies">
      <ul class="footer-links">
        <li><a href="/privacy-policy">Privacy Policy</a></li>
        <li><a href="/terms-of-service">Terms of Service</a></li>
        <li><a href="/return-policy">Return Policy</a></li>
        <li><a href="/shipping-policy">Shipping Policy</a></li>
      </ul>
    </div>

    <div class="footer-section newsletter">
      <h3>Subscribe to Newsletters</h3>
      <form>
        <input class="input" type="email" placeholder="Enter your email..." required>
        <button type="submit">SUBSCRIBE</button>
      </form>
      <div class="icons-parent">
        {% for block in section.blocks %}
          <a href="{{ block.settings.icon_link}}">
            <img class="icon" src="{{ block.settings.icon_image | image_url }}" alt="Icon" height="100px" width="100px">
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</footer>
<style>
  .footer {
    background: black;
    color: white;
    padding: 20px 30px;
    display: flex;
    justify-content: center;
  }

  .footer-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 20px;
    width: 100%;
    max-width: 1200px;
  }

  .footer-section {
    flex: 1;
    min-width: 250px;
    text-align: center;
  }

  .brand h2 {
    font-size: 42px;
    font-weight: bold;
    background: linear-gradient(#FFFFFF, #999999);
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin: 0;
  }

  .brand h2:nth-child(2) {
    margin-left: 0;
    margin-bottom: 12px;
  }

  .copyright {
    color: gold;
    font-size: 13px;
    margin-top: 10px;
  }

  .policies ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .policies ul li {
    margin: 8px 0;
  }

  .policies ul li a {
    color: white;
    text-decoration: none;
    font-weight: bold;
    font-size: 15px;
  }

  .newsletter h3 {
    font-size: 22px;
    color: white;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .newsletter form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .newsletter input {
    padding: 6px 10px;
    width: 80%;
    border-radius: 5px;
    border: none;
    margin-bottom: 10px;
    background: #D9D9D9;
    color: black;
  }

  .newsletter button {
    background: linear-gradient(#CDA60B, #675306);
    border: none;
    padding: 8px 25px;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    color: white;
  }

  .icons-parent {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 10px;
    gap: 10px;
  }

  .icon {
    width: 22px;
    height: 22px;
  }

  /* --- Responsive Design --- */

  /* Large laptops and desktops */
  @media (max-width: 1200px) {
    .brand h2 {
      font-size: 36px;
    }

    .newsletter input {
      width: 75%;
    }
  }

  /* Standard laptops */
  @media (max-width: 992px) {
    .brand h2 {
      font-size: 32px;
    }

    .newsletter input {
      width: 70%;
    }

    .newsletter h3 {
      font-size: 20px;
    }

    .policies ul li a {
      font-size: 14px;
    }
  }

  /* Tablets */
  @media (max-width: 768px) {
    .footer-container {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .footer-section {
      width: 100%;
      max-width: 100%;
    }

    .brand h2 {
      font-size: 30px;
    }

    .newsletter input {
      width: 90%;
    }
  }

  /* Mobile L */
  @media (max-width: 600px) {
    .brand h2 {
      font-size: 26px;
    }

    .newsletter input {
      width: 100%;
    }

    .policies ul li a {
      font-size: 13px;
    }

    .newsletter h3 {
      font-size: 18px;
    }

    .newsletter button {
      padding: 8px 20px;
      font-size: 14px;
    }
  }

  /* Mobile M & S */
  @media (max-width: 480px) {
    .brand h2 {
      font-size: 24px;
    }

    .footer {
      padding: 20px 15px;
    }

    .newsletter h3 {
      font-size: 16px;
    }

    .newsletter input {
      padding: 6px;
      font-size: 14px;
    }

    .newsletter button {
      font-size: 13px;
      width: 100%;
    }

    .policies ul li a {
      font-size: 12px;
    }

    .icon {
      width: 18px;
      height: 18px;
    }

    .footer-section {
      padding-bottom: 15px;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "section",
  "settings": [
  ],
  "blocks": [
       {
            "name": "icons",
            "type": "image",
            "settings": [
                {
                    "type": "image_picker",
                    "label": "image",
                    "id": "icon_image"
                },
                {
                  "type": "text",
                  "id": "icon_link",
                  "label": "Icon Link",
                }
            ]
        }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}
